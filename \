const express = require('express');
const app = express();
const port = process.env.PORT || 3000;

app.get('/', (req, res) => {
	  res.send('Hello, world! This is my first Node.js app on Ubuntu.');
});

app.listen(port, '0.0.0.0', () => {
	  console.log(`App is running on http://0.0.0.0:${port}`);
});

